{
  "name": "@sc3d/ruth",
  "description": "Simple XML templating system",
  "version": "1.0.0alpha2",
  "author": "Reuben Thomas",
  "bin": {
    "ruth": "./bin/run"
  },
  "bugs": "https://github.com/rrthomas/ruth/issues",
  "dependencies": {
    "argparse": "^2.0.1",
    "debug": "^4.3.2",
    "execa": "^5.1.1",
    "fontoxpath": "github:rrthomas/fontoxpath#replace",
    "fs-extra": "^10.0.0",
    "get-stdin-with-tty": "^6.0.0",
    "linkfs": "^2.1.0",
    "slimdom": "^2.3.2",
    "slimdom-sax-parser": "^1.4.1",
    "tslib": "^1.14.1",
    "unionfs": "^4.4.0",
    "xml-formatter": "^2.4.0"
  },
  "devDependencies": {
    "@sc3d/nancy": "^7.0.0-beta1",
    "@tsconfig/node14": "^1.0.1",
    "@types/argparse": "^2.0.10",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.12",
    "@types/mocha": "^8.2.3",
    "@types/node": "^14.17.5",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "dir-compare": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-plugin-import": "^2.24.2",
    "linkinator": "github:rrthomas/linkinator",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "open-cli": "^6.0.1",
    "pre-commit": "^1.2.2",
    "tempy": "^1.0.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": "^14.0.0"
  },
  "files": [
    "/bin",
    "/lib"
  ],
  "homepage": "https://github.com/rrthomas/ruth",
  "license": "GPL-3.0-or-later",
  "main": "lib/index.js",
  "repository": "rrthomas/ruth",
  "scripts": {
    "lint": "eslint . --ext .ts && depcheck",
    "prebuild": "node --print \"'export default \\'' + require('./package.json').version + '\\';'\" > src/version.ts",
    "build": "tsc --build",
    "clean": "rm -rf lib tsconfig.tsbuildinfo",
    "prepack": "npm run clean && npm run build && npm run docs",
    "test": "npm run build && mocha --forbid-only \"test/**/*.test.ts\"",
    "coverage": "NODE_ENV=coverage nyc --extension .ts npm run test",
    "loc": "cloc src/*.ts",
    "diff-check": "git diff --exit-code",
    "prepublishOnly": "npm run diff-check && git push --all",
    "postpublish": "git push --tags",
    "example": "open-cli file://$(pwd)/test/cookbook-example-website-expected/index/index.html",
    "docs": "nancy README.nancy.md README.md && nancy Cookbook.nancy.md Cookbook.md"
  },
  "pre-commit": [
    "lint",
    "test",
    "docs",
    "diff-check"
  ],
  "types": "lib/*.d.ts"
}
