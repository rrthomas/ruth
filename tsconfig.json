{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "importHelpers": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": ["src/**/*"]
}
